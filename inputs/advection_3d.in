<comment>
problem = 3D Hydro simple advection test

<job>
problem_id = advection

<problem/advection>
rho0        = 1.0
p0          = 1.0
rho_ratio   = 1.01          # density contrast (peak value is (1+rho_ratio)*rho0)
rho_radius  = 0.0625        # radius of inital smooth profile
rho_fraction_edge = 0.01    # density value at the edge of the profile: (1+rho_fraction_edge*rho_ratio)*rho0
vx          = 1.0
vy          = 1.0
vz          = 1.0

<refinement>
type                     = maxdensity
maxdensity_deref_below   = 1.00005
maxdensity_refine_above  = 1.0001

<parthenon/mesh>
refinement = adaptive
numlevel = 3
pack_size = -1

nx1 = 32
x1min = -0.5
x1max = 0.5
ix1_bc = periodic
ox1_bc = periodic

nx2 = 32
x2min = -0.5
x2max = 0.5
ix2_bc = periodic
ox2_bc = periodic

nx3 = 32
x3min = -0.5
x3max = 0.5
ix3_bc = periodic
ox3_bc = periodic

<parthenon/meshblock>
nx1=8
nx2=8
nx3=8

<parthenon/time>
integrator = vl2
cfl = 0.3
tlim = 1.0
nlim = 100000
perf_cycle_offset = 2 # number of inital cycles not to be included in perf calc
ncycle_out_mesh = -1000

<hydro>
eos = adiabatic
riemann = hlle
reconstruction = plm
gamma = 1.666666666666667 # gamma = C_p/C_v
use_scratch = false
scratch_level = 0 # 0 is actual scratch (tiny); 1 is HBM
use_pack_in_one = true

